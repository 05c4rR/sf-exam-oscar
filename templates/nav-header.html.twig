{% set route = app.request.attributes.get('_route') %}
<nav class="navbar navbar-expand-lg bg-info">
  <div class="container-fluid">

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link {% if 'home' in route %}fw-bold text-light{% endif %}  " aria-current="page" href="{{path('home')}}">Accueil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if 'product' in route %}fw-bold text-light{% endif %}" href="{{path('product')}}">Nos produits</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if 'about' in route %}fw-bold text-light{% endif %}" href="{{path('about')}}">A propos de nous</a>
        </li>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <li class="nav-link fw-bold text-light" > 
          <a href="">{{app.user.userIdentifier}}</a></li>
        {% else %}
        <li class="nav-item">
          <a class="nav-link" href="{{path('app_login')}}">Se connecter</a>
        </li>
        {% endif %}
      </ul>
    </div>    
  </div>
</nav>