{% extends 'base.html.twig' %}

{% block title %} {{ page_name }} {% endblock %}

{% block body %}
    <h1>{{ page_name }}</h1>

    {% if products is empty %}
        <p>Aucun produit en promotion pour le moment.</p>
    {% else %}
        <ul>
            {% for product in products %}
                <li>
                    <a href="{{ path('product_item', {id: product.id}) }}">
                        {{ product.name }} - <strong>{{ product.getFinalPrice() }} â‚¬</strong>
                        {% if product.specialOffer %}
                            <span class="badge badge-danger">Promotion !</span>
                        {% endif %}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    <a href="{{ path('product') }}">Voir tous les produits</a>
{% endblock %}
